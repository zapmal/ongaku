{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": ".",
      "paths": {
         "@/*": ["src/*"],
         "@features/*": ["src/features/*"],
         "@internal/*": ["src/internal/*"],
         "@utils/*": ["src/utils/*"]
      },
    "incremental": true,
  }
}
